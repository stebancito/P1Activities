<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B3D91">

    <LinearLayout
        android:id="@+id/contenedorCentral"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:background="#E0F7FA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layoutBotones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp">

        <TextView
            android:id="@+id/txtTituloTierra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Planeta Tierra"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#1B5E20"
            android:gravity="center"/>

        <View
            android:layout_width="110dp"
            android:layout_height="3dp"
            android:layout_marginTop="8dp"
            android:background="#2E7D32"/>

        <!-- Imagen -->
        <!--
        <ImageView
            android:id="@+id/imgTierra"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/tierra"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"/>
        -->

        <TextView
            android:id="@+id/txtDescripcionTierra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="La Tierra es el tercer planeta del Sistema Solar y el único conocido que alberga vida. Posee agua en estado líquido y una atmósfera rica en oxígeno."
            android:textSize="16sp"
            android:textColor="#0D47A1"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\nDatos importantes:"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#1B5E20"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 70% cubierta por agua\n• 1 satélite natural\n• 365 días por órbita\n• Temperatura promedio: 15°C"
            android:textSize="14sp"
            android:textColor="#004D40"
            android:textAlignment="center"
            android:layout_marginTop="6dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBotones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnAnteriorTierra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Anterior"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1565C0"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnSiguienteTierra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Siguiente"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2E7D32"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>